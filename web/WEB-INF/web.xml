<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">


    <servlet>
        <servlet-name>VLSValidEmail</servlet-name>
        <servlet-class>by.vls.web.EmailChecker</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VLSValidEmail</servlet-name>
        <url-pattern>/emailvalid.do</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>VLS Calc Form</servlet-name>
        <servlet-class>by.vls.web.GetCalcForm</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VLS Calc Form</servlet-name>
        <url-pattern>/vlscalc.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VLS Main Page</servlet-name>
        <servlet-class>by.vls.web.MainPageVls</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VLS Main Page</servlet-name>
        <url-pattern>/vlsmain</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Person ident</servlet-name>
        <jsp-file>/personident.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Person ident</servlet-name>
        <url-pattern>/identperson.do</url-pattern>
    </servlet-mapping>
	
	<servlet>
        <servlet-name>Company ident</servlet-name>
        <jsp-file>/companyident.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Company ident</servlet-name>
        <url-pattern>/identcompany.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VLS User Register</servlet-name>
        <servlet-class>by.vls.web.UserRegister</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VLS User Register</servlet-name>
        <url-pattern>/register.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VLS Authorization</servlet-name>
        <servlet-class>by.vls.web.UserAuth</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VLS Authorization</servlet-name>
        <url-pattern>/vlsauth.do</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://localhost:3306/vls</param-value>
    </context-param>
    <context-param>
        <param-name>user</param-name>
        <param-value>dan</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>pilotpen</param-value>
    </context-param>

    <listener>
        <listener-class>
            by.vls.database.ContextListener
        </listener-class>
    </listener>

</web-app>